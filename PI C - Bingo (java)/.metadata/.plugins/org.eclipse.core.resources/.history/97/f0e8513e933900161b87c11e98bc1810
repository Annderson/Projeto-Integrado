package org.bdo;

/**A classe Cartela é uma DBO faz o espelhamento da tabela Cartela do banco de dados, pegando as informações,
 * como o status e numero da cartela, e inserindo, excluindo e atualiazando. 
 * Será usada em classes DAOs
 * @author Anderson Rodrigues Lima.
 * @since 2016.
 * @version 1.0.
  */

public class Cartela {
	protected int numero;
	protected String estado;
	
	public int getNumero() {
		return numero;
	}
	
	public String getStatus() {
		return estado;
	}
	
	public void setNumero(int numero) throws Exception {
		if (numero < 1)
			throw new Exception("Numero da cartela não existe");
		this.numero = numero;
	}
	
	public void setStatus(String estado) throws Exception {
		if ((estado == null))
			throw new Exception("Estado não foi fornecido");
		if ((!(estado.equals("d"))) ||(!(estado.equals("i"))))
			throw new Exception("Estado não e valido");
		
		this.estado = estado;
	}
	
	public Cartela (int cart, String sta) throws Exception{	
		
		setNumero(cart);
		setStatus(sta);
	}
	
	public boolean equals (Object obj){
		if (obj == this)
			return true;
		if (obj == null)
			return false;
		if (!(obj instanceof Cartela))
			return false;
		
		Cartela car = (Cartela)obj;
		
		if (car.numero != this.numero)
			return false;
		if (car.estado != this.estado)
			return false;
		
		return true;
	}
	
	public String toString (){
		String ret = "{";
		
		ret+= this.numero + ", " + this.estado;
		ret+= "}";
		
		return ret;
	}
	
	public int hashCode(){
		int hash = super.hashCode();
		
		hash = hash*3 + new Integer(this.numero).hashCode();
		hash = hash*3 + this.estado.hashCode();
		
		return hash;
	}
	
	public Cartela (Cartela modelo) throws Exception{
		
		if (modelo == null)
			throw new Exception ("Cartela não foi fornecida");
		
		this.numero = modelo.numero;
		this.estado = modelo.estado;
		
	}
	
	public Object clone(){
		Cartela car = null;
		
		try {
			car = new Cartela(this);
		} catch (Exception e) {	}
		
		return car;
	}
}
